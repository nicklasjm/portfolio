---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';

export interface Props {
  title: string;
  description: string;
  image: string;
  year: string;
  client?: string;
  role?: string;
  tags: string[];
  id: string;
}

const { title, description, image, year, client, role, tags, id } = Astro.props;
---

<Layout title={title} description={description}>
  <Header />
  
  <main class="pt-20">
    <!-- Back Button -->
    <div class="max-w-7xl mx-auto px-6 py-8">
      <button 
        onclick="history.back()" 
        class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors group"
      >
        <svg class="w-4 h-4 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to work
      </button>
    </div>

    <!-- Hero Image -->
    <div class="relative max-w-7xl mx-auto px-6 mb-16">
      <div class="aspect-[16/9] rounded-lg overflow-hidden bg-gray-900">
        <img 
          src={image} 
          alt={title}
          class="w-full h-full object-cover"
          style="view-transition-name: project-image-{id}"
        />
      </div>
    </div>

    <!-- Project Details -->
    <div class="max-w-4xl mx-auto px-6 pb-20">
      <div class="grid md:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="md:col-span-2 space-y-8">
          <div>
            <h1 class="text-4xl font-bold mb-4">{title}</h1>
            <p class="text-xl text-gray-300 leading-relaxed">
              {description}
            </p>
          </div>

          <div class="prose prose-invert max-w-none">
            <slot />
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-8">
          <div>
            <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wide mb-4">
              Project Info
            </h3>
            <dl class="space-y-3">
              <div>
                <dt class="text-sm text-gray-400">Year</dt>
                <dd class="font-medium">{year}</dd>
              </div>
              {client && (
                <div>
                  <dt class="text-sm text-gray-400">Client</dt>
                  <dd class="font-medium">{client}</dd>
                </div>
              )}
              {role && (
                <div>
                  <dt class="text-sm text-gray-400">Role</dt>
                  <dd class="font-medium">{role}</dd>
                </div>
              )}
            </dl>
          </div>

          <div>
            <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wide mb-4">
              Technologies
            </h3>
            <div class="flex flex-wrap gap-2">
              {tags.map((tag) => (
                <span class="text-sm px-3 py-1 bg-gray-800 rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>